include ../mixins/sub-menu.pug

header(class="header")
    div(class="container")
        div(class="main__header")
            div(class="inner-logo")
                a(href="/") 
                    img(src=settingGeneral.logo, alt="Logo")
            
            form(
                action='/search'
                method="GET"
            )
                div(class="form-control d-flex mb-0")
                    input(
                        type="text" placeholder="Nhập từ kháo tím kiếm"
                        class="form-control"
                        name ="keyword"
                        value = keyword
                    )
                    button(type="submit" class="btn btn-primary")  Tìm kiếm

            div(class="inner-menu")
                ul 
                    li 
                        a(href="/") Trang chu
                    li(class="sub-menu")
                        -const pathProduct = "/products"
                        a(href=pathProduct) San pham
                        if(layoutProductCategory)
                            +sub-menu(layoutProductCategory,pathProduct)
                    li 
                        a(href=`/cart/`) Giỏ hàng (#{miniCart ? miniCart.totalQuantity : "0" })
                    if(user)
                        li 
                            a(href="/chat") Chat
                        li 
                            a(href="/user/logout") Đăng xuất
                        li 
                            a(href="/user/infor") #{user.fullName}
                    else
                        li 
                            a(href="/user/register") Đăng kí
                        li 
                            a(href="/user/login") Đăng nhập