include ../mixins/sub-menu.pug

header(class="header")
  
    div(class="head")
        div(class="container")
            div(class="left")
                div(class="email") <i class="fa-regular fa-envelope"></i> support@rstheme.com
                div(class="phone") <i class="fa-solid fa-phone"></i> 0987654321
            div(class="head-right")
                if(user) 
                    a(href="/user/logout") Đăng xuất
                else 
                    a(href="/user/register") Đăng kí
                    a(href="/user/login") Đăng nhập
    
    div(class="main__header")
        div(class="container")
            div(class="inner-logo")
                a(href="/") 
                    img(src=settingGeneral.logo, alt="Logo")
            
            form(
                action='/search'
                method="GET"
            )
                div(class="form-control d-flex mb-0")
                    input(
                        type="text" placeholder="Nhập từ kháo tím kiếm"
                        class="form-control"
                        name ="keyword"
                        value = keyword
                    )
                    button(type="submit" class="btn btn-primary") Search

            div(class="inner-menu")
                ul 
                    li 
                        a(href="/") Trang chu
                    li(class="sub-menu")
                        -const pathProduct = "/products"
                        a(href=pathProduct) San pham
                        if(layoutProductCategory)
                            +sub-menu(layoutProductCategory,pathProduct)
                    li 
                        a(href=`/cart/`) Giỏ hàng (#{miniCart ? miniCart.totalQuantity : "0" })
                    if(user)
                        li 
                            a(href="/users/friends") Bạn bè
                        li 
                            a(href="/rooms-chat") Phòng chat
                        
                        li 
                            a(href="/user/infor") #{user.fullName}
                    else
                        