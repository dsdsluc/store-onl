extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
  +alert-error(5000)

  .container.my-5
    .row.justify-content-center
      .col-8
        h1(class="text-center") Đổi mật khẩu
        form(
          action="/user/password/reset?_method=PATCH"
          method="POST"
        )
          div(class="form-group mb-2")
            label(for="password") Mật khẩu mới
            input(
              type="password"
              class="form-control"
              id="password"
              name="password"
              required
            )
          div(class="form-group mb-2")
            label(for="confirm") Xác nhận lại mật khẩu
            input(
              type="password"
              class="form-control"
              id="confirm"
              name="confirm"
              required
            )
          div(class="form-group d-grid")
            button(
              type="submit"
              class="btn btn-primary btn-block "
            ) Cập nhật