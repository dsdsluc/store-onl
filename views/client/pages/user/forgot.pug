extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
  +alert-error(5000)

  div(class="login-thumbnail")
    .container.my-5
      .row.justify-content-center.login-package
        .col-4 
          .inner-image 
            img(src="/client/images/KhinhKhiCau.jpg", alt="")
        .col-8
          div(class="login")
            h1(class="text-center") Quên mật khẩu
            form(
              action="/user/password/forgot"
              method="POST"
            )
              div(class="form-group mb-3")
                label(for="email") Email
                input(
                  type="email"
                  class="form-control"
                  id="email"
                  name="email"
                  required
                ) 
              div(class="form-group d-grid button")
                button(
                  type="submit"
                  class="btn btn-primary btn-block "
                ) Gửi mã xác nhận eamil
        