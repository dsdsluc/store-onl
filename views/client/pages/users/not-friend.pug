extends ../../layouts/default.pug
include ../../mixins/box-head.pug
include ../../mixins/alert.pug

block main
  +alert-success(5000)
  +alert-error(5000)
  .container.my-3
    include ../../partials/list-btn-user.pug
    .row
      .col-12
        +box-head("Danh sách người dùng")

    .row(data-users-not-friend = user.id) 
        each user in users
            .col-6(user_id = user.id)
                div(class='box-user')
                    div(class="inner-avatar")
                        img(src =(user.avatar ? user.avatar : "/client/images/user-avatar.jpg"), alt= user.fullName)
                    div(class="inner-infor")
                        div(class="inner-name") #{user.fullName}  
                        div(class="inner-buttons") 
                            button(
                                class="btn btn-sm btn-primary me-md-2"
                                btn-add-friend=user.id
                                ) Kết bạn
                            button(
                                class="btn btn-sm btn-secondary me-md-2"
                                btn-cancel-friend=user.id
                                ) Hủy
block script 
    script(src="/client/js/user.js")